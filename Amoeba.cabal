                   Test.ScenarioTest,
                   GameLogic.Game,
                   GameLogic.Scenario,
                   GameLogic.AI,
                   Test.ObjectTest,
                   Test.StateInjectionTest,
                   GameLogic.Evaluation

executable Amoeba
  build-depends:   base >= 4
  hs-source-dirs:  Amoeba
  ghc-options:     -O1 -threaded -outputdir ./Temp -o ./Temp/Amoeba ./Amoeba/Amoeba.hs
  main-is:         Amoeba.hs
